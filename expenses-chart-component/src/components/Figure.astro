const {day} = Astro.props;
---


<figure class="day flex flex-col justify-end w-9 text-center relative">
    <div id={day} class="  bar rounded-md hover:opacity-80 cursor-pointer relative h-0
    after:content-[attr(data-amount)] after:absolute after:block after:bg-roseCustom-DarkBrown 
    after:h-10  after:p-1  after:text-white after:-left-1 after:text-center after:py-2
    after:bottom-[calc(100%_+_8px)] after:rounded-md after:text-sm after:font-semibold
    after:scale-0 hover:after:scale-100 after:transition-all mt-0 ease-in"></div>
    <figcaption class="text-roseCustom-MediumBrown mt-4 text-sm">{day}</figcaption>
</figure>